<Page x:Class="CulinaryBook.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CulinaryBook.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <Grid>
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="White" Offset="1"/>
                <GradientStop Color="#FFFF9E9E"/>
            </RadialGradientBrush>
        </Grid.Background>
        <TextBox x:Name="tbCreateLogin" HorizontalAlignment="Left" Margin="313,152,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="166" Height="27"/>
        <TextBlock HorizontalAlignment="Left" Margin="313,126,0,0" TextWrapping="Wrap" Text="Create Login" VerticalAlignment="Top" Height="21" Foreground="Red"/>
        <PasswordBox x:Name="psbCreatePassword" HorizontalAlignment="Left" Margin="313,205,0,0" VerticalAlignment="Top" Width="166" Height="27"/>
        <TextBlock HorizontalAlignment="Left" Margin="313,179,0,0" TextWrapping="Wrap" Text="Create Password" VerticalAlignment="Top" Height="21" Foreground="Red"/>
        <GroupBox Header="Acsess" Margin="272,315,272,20" Foreground="Red" BorderBrush="Red"/>
        <CheckBox x:Name="chbPolicy" Content="Private Policy" HorizontalAlignment="Left" Margin="290,345,0,0" VerticalAlignment="Top" Foreground="#FF737373" FontFamily="Segoe UI Emoji" />
        <CheckBox x:Name="chbSharing" Content="Data sharing" HorizontalAlignment="Left" Margin="290,391,0,0" VerticalAlignment="Top" Foreground="#FF797979"/>
        <Button x:Name="btRegistration" Content="Registrate" HorizontalAlignment="Left" Margin="331,259,0,0" VerticalAlignment="Top" Height="32" Width="130" Background="Red" Foreground="White" />
        <TextBox x:Name="tbName" HorizontalAlignment="Left" Margin="313,94,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="166" Height="27"/>
        <TextBlock HorizontalAlignment="Left" Margin="313,73,0,0" TextWrapping="Wrap" Text="Enter your name" VerticalAlignment="Top" Height="21" Foreground="Red"/>

    </Grid>
</Page>
