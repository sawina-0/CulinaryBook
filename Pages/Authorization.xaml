<Page x:Class="CulinaryBook.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CulinaryBook.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFFFC0C0"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox x:Name="txbLogin" HorizontalAlignment="Center" Margin="0,163,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="psbPassword" HorizontalAlignment="Center" Margin="0,207,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="340,142,0,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" Foreground="Red"/>
        <TextBlock HorizontalAlignment="Left" Margin="340,186,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Foreground="Red"/>
        <Button x:Name="btAuthorisation" Content="Authorisation" HorizontalAlignment="Center" Margin="0,247,0,0" VerticalAlignment="Top" Background="Red" Foreground="White" Height="21" Width="91" Click="btAuthorisation_Click"/>
        <Button x:Name="btRegistration" Content="Registrate" HorizontalAlignment="Center" Margin="0,283,0,0" VerticalAlignment="Top" Height="21" Width="92" Background="Red" Foreground="White" Click="btRegistration_Click"/>

    </Grid>
</Page>
